{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Restart HA",
            "type": "shell",
            "command": "docker restart homeassistant",
            "problemMatcher": [],
            "icon": {"id": "debug-restart"}
        },
        {
            "label": "logs",
            "type": "shell",
            "command": "docker logs homeassistant|tail -f",
            "problemMatcher": [],
            "icon": {"id": "search"}
        },
        {
            "label": "Link Repository",
            "type": "shell",
            "command": "${workspaceFolder}/.vscode/scripts/link-repository.sh",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "runOptions": {
                "runOn": "folderOpen"
            },
            "icon": {"id": "link"}
        },
        { 
            "label": "Install Home Assistant for source references",
            "type": "shell",
            "command":" pip3 list|grep homeassistant||pip3 install homeassistant pyopenssl voluptuous --no-deps --break-system-packages",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "runOptions": {
                "runOn": "folderOpen"
            }
            ,
            "icon": {"id": "add"}
        }
    ]
}